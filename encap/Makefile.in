# @configure_input@
include ../include/config.Makefile
VPATH = @srcdir@

install ::
Makefile    : Makefile.in    ; cd ..; ./config.status encap/$@

ifeq "$(ENCAP)" "yes"

postinstall : postinstall.in ; cd .. && ./config.status encap/$@
preremove   : preremove.in   ; cd .. && ./config.status encap/$@

install :: $(encapdir)/encapinfo
$(encapdir)/encapinfo: encapinfo
	$(INSTALL_DATA) $< "$@"

install :: $(encapdir)/postinstall
$(encapdir)/postinstall: postinstall; $(INSTALL_PROGRAM) $< "$@"

install :: $(encapdir)/preremove
$(encapdir)/preremove : preremove; $(INSTALL_PROGRAM) $< "$@"

install :: $(encapdir)/INSTALL
$(encapdir)/INSTALL : INSTALL; $(INSTALL_DATA) $< $@

endif

