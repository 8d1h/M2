# @configure_input@
include ../include/config.Makefile
VPATH = @srcdir@

install ::

Makefile : Makefile.in; cd ..; ./config.status encap/Makefile

ifeq "$(ENCAP)" "yes"

install :: $(encapdir)/encapinfo
$(encapdir)/encapinfo: encapinfo
	$(INSTALL_DATA) $< "$@"

install :: $(encapdir)/postinstall
$(encapdir)/postinstall: postinstall
	$(INSTALL_PROGRAM) $< "$@"
postinstall : @srcdir@ ; cd .. && ./config.status encap/$@

install :: $(encapdir)/INSTALL

$(encapdir)/INSTALL : INSTALL
	cp $< $@

endif

