ifndef MAKECONF
MAKECONF = TRUE

NULL :=
ifeq "$(OS)" "MS-DOS"
PATHSEP := \$(NULL)
else
PATHSEP := /
endif

export VERSION	      := 0.8.33
export VERSIONDATE    := July 25, 1997
export GMPVERSION     := 2.0.2
export LIBFACVERSION  := 0.2.3
export GCVERSION      := 4.12alpha2
export FACTORYVERSION := 1.2c
export MPVERSION      := 1.1.2
export ARCH           := $(shell uname -m | sed s=/=-=g )
export OS             := $(shell uname -s | sed s=/=-=g )
export REL            := $(shell uname -r | sed s=/=-=g )
export TOPDIR         := $(shell pwd)
export CC             := gcc
export CXX            := gcc
export SYSTEM         := $(ARCH) $(OS) $(REL)
export DESC           := $(VERSION)-$(ARCH)-$(OS)-$(REL)
export LIBDIR	      := ../../lib
export INCDIR	      := ../../include
export PATH           := ..$(PATHSEP)bin:$(PATH)

MP := TRUE
FACTOR := TRUE
# includeX11 = TRUE

endif
