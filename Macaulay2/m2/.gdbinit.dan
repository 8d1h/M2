# -*- sh -*-
echo -- loading .gdbinit\n
# when debugging, gdb sets a trap in the memory space of ld.so, so its checksum will always change
# so we send a message to the loaddata routine to ignore that
set environment LOADDATA_IGNORE_CHECKSUMS yes

directory ../../libraries/gc/build/gc-7.2alpha2/
directory ../../libraries/ntl/build/ntl-5.5.2/src/
directory ../../libraries/factory/build/factory/
directory ../../libraries/libfac/build/libfac/
directory ../../libraries/libfac/build/libfac/factor/
directory ../../libraries/libfac/build/libfac/charset/
source .gdb-files
b fatalarrayindex
# b GC_default_warn_proc
# can only do this after the program starts:
# b __gmp_set_memory_functions
# b main
b ERROR
b outofmem
# b abort
b GC_err_printf
# source .gdb-run-it
