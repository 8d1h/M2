%.out : %.m2
	@ if [ -f $*.out ] && cmp -s $*.m2 $*.old ; \
	 then touch $*.out ; \
	 else \
	   echo "running example $*"; \
	   ../../bin/Macaulay2 $(ARGS) <"$*.m2" >$*.tmp && \
	   mv $*.tmp $*.out && \
	   cp $*.m2 $*.old ; \
	 fi
