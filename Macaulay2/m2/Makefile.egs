TOPDIR = ../../../..
include $(TOPDIR)/Makeconf

ifndef NODUMPDATA
ARGS := -q -silent \
	'-e loaddata "../../../cache/Macaulay2-$(ARCH)-data"' \
	-- -x -s ../../../m2/eg.m2
else
ARGS := -q -silent -x -s -ephase=1 ../../setup.m2 -ephase=0 ../../../m2/eg.m2
endif

