%.out : %.m2
	@ if [ -f $*.out ] && cmp -s $*.m2 $*.old ; \
	 then touch $*.out ; \
	 else \
	   echo "running example $*"; \
	   if $(M2HOME)/bin/Macaulay2 $(ARGS) <"$*.m2" >$*.tmp ; \
	   then mv $*.tmp $*.out ; \
                cp $*.m2 $*.old ; \
	   else echo "contents of $*.m2:" ; \
		cat $*.m2 ; \
	   fi ; \
	 fi
