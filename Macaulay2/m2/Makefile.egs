# -*- Mode: Makefile -*-
TOPDIR = ../../../..
include $(TOPDIR)/config.Makefile

ifneq "$(DUMPDATA)" "no"
ARGS := -q -silent \
	'-e loaddata "$(M2HOME)/$(DUMPDATAFILE)"' \
	-- -x -s ../../$(srcdir)/eg.m2
else
ARGS := -q -silent -x -s -ephase=1 $(M2HOME)/m2/setup.m2 -ephase=0 $(M2HOME)/m2/eg.m2
endif

