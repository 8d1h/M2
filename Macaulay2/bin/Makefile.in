# @configure_input@
include ../../include/config.Makefile
VPATH = @srcdir@

.PHONY : all clean distclean

all::
clean ::; rm -rf bin
$(bindir) :; $(INSTALL) -d "$@"
install       :: $(bindir); $(INSTALL_PROGRAM)    M2$(EXE) $(bindir)/M2$(EXE)
install-strip :: $(bindir); $(INSTALL_PROGRAM) -s M2$(EXE) $(bindir)/M2$(EXE)

install       :: $(bindir)/M2-load-libs
$(bindir)/M2-load-libs : M2-load-libs ; $(INSTALL) $^ $@

distclean : clean; rm -f Makefile
Makefile : Makefile.in; cd ../..; ./config.status Macaulay2/bin/Makefile
