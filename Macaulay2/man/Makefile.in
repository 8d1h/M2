# @configure_input@
VPATH = @srcdir@
include ../../include/config.Makefile
all: M2.1 @mandir@/man1/M2.1
# we want to ignore the --datarootdir setting, whatever that means, so here we we mention it: @datarootdir@
docdir := @docdir@
@mandir@/man1:; @INSTALL@ -d $@
@mandir@/man1/M2.1 : M2.1 | @mandir@/man1 ; @INSTALL_DATA@ $< $@
Makefile : Makefile.in; cd ../..; ./config.status Macaulay2/man/Makefile
M2.1: M2.1.in Makefile
	rm -f $@
	sed <$< >$@ \
	    -e 's,[@]PACKAGE_TARNAME[@],@PACKAGE_TARNAME@,g' \
	    -e 's,[@]PACKAGE_VERSION[@],@PACKAGE_VERSION@,g' \
	    -e 's,[@]PACKAGE_NAME[@],@PACKAGE_NAME@,g' \
	    -e 's,[@]docdir[@],$(docdir),g'
clean :: ; rm -f M2.1 M2-help.1
