include ../../config.Makefile
VPATH = @srcdir@
INSTALL = @INSTALL@
INSTALL_PROGRAM = $(INSTALL)
INSTALL_DATA = $(INSTALL)

EXES := echoout timestmp restart update targettypes

ifeq ($(OS),Linux)
EXES += screen
endif

.PHONY : all clean distclean wc

all:: $(EXES) targettypes.h
targettypes.h : targettypes ; ./$^ >$@
update.o : restart.h
clean :; rm -f $(EXES) *.o $(EXES:=.exe) $(EXES:=.obj) targettypes.h
../bin/linkexec : linkexec ; cp -a $< $@

ifeq "$(OS)" "Windows-95-98-NT"
all:: ../setup.exe
../setup.exe : setup
	cp setup.exe ..
endif

wc:; wc -l *.c *.h

distclean : clean
	rm -f Makefile
