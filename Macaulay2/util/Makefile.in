# @configure_input@
include ../../include/config.Makefile
vpath %.a  $(BUILTLIBPATH)/lib
vpath %.so $(BUILTLIBPATH)/lib
VPATH = @srcdir@
EXES := echoout timestmp restart updat
CPPFLAGS :=  -I. -I../../include $(CPPFLAGS)

ifeq (@OS@,Linux)
EXES += screen
endif

all: $(EXES)

# overlay.h is no longer needed
#  all: overlay.h
#  overlay.h : overlay ; ./$< >$@

# all: targettypes.h
#  we don't need targettypes.h any more
#  it's replaced by stdint.h
#  and it makes cross-compiling not work
# targettypes.h : targettypes ; ./$^ >$@
clean:; rm -f overlay.h overlay gmon.out $(EXES) *.o $(EXES:=.exe) $(EXES:=.obj) targettypes.h gc_tested gc_test
updat.o : restart.h
../bin/linkexec : linkexec ; cp -a $< $@
ifeq "@OS@" "Windows-95-98-NT"
all: ../setup.exe
../setup.exe : setup; cp setup.exe ..
endif
distclean : clean; rm -f Makefile
Makefile : Makefile.in; cd ../..; ./config.status Macaulay2/util/Makefile
# gc_test
CPPFLAGS += -I@srcdir@/../../include
LDLIBS += @GC_LIBS@
all: gc_tested
gc_test : gc_test.c

# these two lines tried to link statically with libcc to help the test work
# but it makes more sense to let it test the same way we link with it
# gc_test : -lgc
# .LIBPATTERNS = lib%.a
gc_test: always

gc_tested: gc_test; ./$< && touch $@
