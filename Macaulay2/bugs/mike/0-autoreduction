--*-M2-*-

S = QQ[a,b,c,d,MonomialOrder => {Weights => {0,1,10,-7}},Global => false];
f = c - a*b;
g = b - a^2;
r = f % g
s = (matrix {{f}} % image matrix {{g}})_(0,0)
assert (r == s)

end

