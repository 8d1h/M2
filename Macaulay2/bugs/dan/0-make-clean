These can prevent "make distclean" so I've removed them.  Find a different way to check.

    ifneq (/usr,/usr)
    $(error expected configuration with --prefix=/usr, to comply with rpm package standards)
    endif
    ifneq "${prefix}" "/usr"
    $(error prefix set to new value)
    fi

    ifneq (@prefix@,/usr)
    $(error expected configuration with --prefix=/usr, to comply with rpm package standards)
    endif

    ifneq (@prefix@,/usr)
    $(error expected configuration with --prefix=/usr, to comply with cygwin package standards)
    endif

    ifneq (@STRIP@,yes)
    $(error expected --enable-strip, to comply with cygwin package standards)
    endif

    ifneq (@DEBUG@,no)
    $(error expected --disable-debug, in order to make a cygwin package)
    endif

    ifneq (@OPTIMIZE@,yes)
    $(error expected --enable-optimize, in order to make a cygwin package)
    endif

    ifneq (@prefix@,/usr)
    $(error expected configuration with --prefix=/usr, to comply with debian package standards)
    endif

    ifneq (@DEBUG@,no)
    $(error expected --disable-debug, in order to make a *.deb package)
    endif

    ifneq (@OPTIMIZE@,yes)
    $(error expected --enable-optimize, in order to make a *.deb package)
    endif

The same is true for all uses of $(error)
