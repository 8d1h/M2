VPATH = @srcdir@
include ../include/config.Makefile
stage1 check reconfigure untar fetch distclean clean :: Makefile.library
distclean :: clean
$(foreach lib,@LIBRARIES@,$(eval untar fetch stage1 check reconfigure ::;$(MAKE) -C $(lib) $$@))
$(foreach lib,@LIBLIST@ libtool M2,$(eval distclean clean ::;$(MAKE) -C $(lib) $$@))
ifeq (@SHARED@,yes)
stage2 :
	@ echo installing sharable library files in @librariesdir@/lib
	if [ -d final/lib ] ; \
	then rm -rf @librariesdir@/lib ;\
	     @INSTALL@ -d @librariesdir@/lib ; \
	     tar cf - --exclude="*.a" --exclude="*.la" --exclude="*.pc" --exclude="*.old" -C final/lib . \
	     | tar xfv - -C @librariesdir@/lib ; \
	fi
endif
Makefile         : Makefile.in         ; cd .. && ./config.status libraries/Makefile
Makefile.library : Makefile.library.in ; cd .. && ./config.status libraries/Makefile.library
clean :: ; rm -rf final
distclean :: ; rm -f Makefile
