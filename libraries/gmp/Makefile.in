RELAX = yes
URL = ftp://ftp.gnu.org/gnu/gmp
VERSION = 4.2.2
# PATCHFILE = @srcdir@/patch-$(VERSION)
CONFIGOPTIONS += --enable-cxx
ifeq (@SHARED@,no)
CONFIGOPTIONS += --disable-shared
endif
ifeq (Darwin i386,$(shell uname -sm))
# on indigo.math.cornell.edu running autoconf 2.60 or 2.61 makes gmp compile a
# copy of ___gmpz_abs into every *.o file, and the linker gives an error
# message!
PRECONFIGURE = autoconf && (cd mpn/x86 && rm -fv *dive_1* */*dive_1* */*/*dive_1* */*mode1o* */*/*mode1o*) || false
else 
PRECONFIGURE = autoconf
endif
include ../Makefile.library
check :: ; $(MAKE) -C $(BUILDDIR) check
Makefile : @srcdir@/Makefile.in ; cd ../.. && ./config.status libraries/gmp/Makefile
