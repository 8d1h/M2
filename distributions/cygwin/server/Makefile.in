all: setup.ini.sig
setup.ini: Macaulay2/* Macaulay2-icons/* Macaulay2-icons Macaulay2
	cd Macaulay2 && md5sum Macaulay2-* setup.hint >md5.sum
	genini Macaulay2 Macaulay2-icons >setup.ini.tmp
	mv setup.ini.tmp setup.ini
setup.ini.sig: setup.ini
	rm -f "$@"
	gpg --detach-sign --local-user "Macaulay2 <dan@math.uiuc.edu>" setup.ini
clean:; rm -f setup.ini
distclean:; rm -f Makefile
