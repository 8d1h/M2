#! /bin/sh -e
# we ignore @datarootdir@
pre_prefix=$ENCAP_SOURCE/$ENCAP_PKGNAME
pre_exec_prefix=$prefix
infodir="@infodir@"; eval infodir="$infodir"; eval infodir="$infodir"
cd "$infodir"
pre_prefix=$ENCAP_TARGET
pre_exec_prefix=$prefix
infodir="@infodir@"; eval infodir="$infodir"; eval infodir="$infodir"
for i in *.info
do (set -x ; install-info --quiet --info-dir="$infodir" --remove "$i")
done
