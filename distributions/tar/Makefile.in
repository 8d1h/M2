# @configure_input@
include ../../include/config.Makefile
TIDY=yes
VPATH=@srcdir@
DEPENDS=yes
S=@package@.tar
E=@package@-@MACHINE@.tar
C=@package@-common.tar
SG=$(S).gz
SJ=$(S).bz2
SZ=$(S).@COMPRESS@
EG=$(E).gz
EJ=$(E).bz2
CG=$(C).gz
CJ=$(C).bz2
pre-install tarballs :: tarballs.@COMPRESS@
tarballs.bz2 : ../../$(EJ) ../../$(CJ) ../../$(SJ)
tarballs.gz  : ../../$(EG) ../../$(CG) ../../$(SG)
T=tar --create --file=$@ --owner=0 --group=0 --mode=a+rX,og-ws \
	--exclude='.nfs*' --exclude='Macaulay2-*-data' \
	--transform 's,^\.,@package@,'
TJ=$(T) --bzip2
TG=$(T) --gzip
../../$(CJ) : always ; $(TJ) -C @pre_prefix@ .
../../$(CG) : always ; $(TG) -C @pre_prefix@ .
../../$(EJ) : always ; $(TJ) -C @pre_exec_prefix@ .
../../$(EG) : always ; $(TG) -C @pre_exec_prefix@ .
../../$(SJ) : always ; svn ls -R @top_srcdir@ | egrep -v '/$$' | $(TJ) -C @top_srcdir@ --files-from=-
../../$(SG) : always ; svn ls -R @top_srcdir@ | egrep -v '/$$' | $(TG) -C @top_srcdir@ --files-from=-
Makefile : Makefile.in; cd ../..; ./config.status distributions/tar/Makefile
distclean : ; rm -rf Makefile
