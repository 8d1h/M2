# @configure_input@
include ../../include/config.Makefile
ENCAP = @ENCAP@
ifeq "${ENCAP}" "yes"
SUFFIX=/@package@
install :: ${prefix}$(SUFFIX)
	@INSTALL@ -m 755 ../top/postinstall ../top/preremove ${prefix}$(SUFFIX)
	@INSTALL@ -m 644 ../top/INSTALL     ../top/encapinfo ${prefix}$(SUFFIX)
else
SUFFIX=
endif
T=tar --create --mode=a+rX,og-ws --exclude='.nfs*'
${prefix}$(SUFFIX) :; $(MKDIR_P) $@
install :: ${prefix}$(SUFFIX)
	$(T) -C @pre_prefix@      . | tar xfp - -C ${prefix}$(SUFFIX)
	$(T) -C @pre_exec_prefix@ . | tar xfp - -C ${prefix}$(SUFFIX)
Makefile : @srcdir@/Makefile.in; cd ../..; ./config.status distributions/install/Makefile
distclean : ; rm -rf Makefile
