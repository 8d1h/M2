BUILDOPTIONS += IgnoreExampleErrors=true
# BUILDOPTIONS += RemakePackages=true
# BUILDOPTIONS += RerunExamples=true
# PACKAGES = Macaulay2Doc
BUILDOPTIONS += PACKAGES="Polyhedra"
# BUILDOPTIONS += -s
