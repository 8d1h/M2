# @configure_input@
include ../include/config.Makefile
all:: M2
install : $(bindir)/M2
$(bindir)/M2 : @srcdir@/M2
	$(INSTALL) -d $(bindir)
	sed -e 's,^M2HOME=.*,M2HOME=$(prefix)/lib/Macaulay2-@PACKAGE_VERSION@,' $< >"$@".tmp
	mv "$@".tmp "$@"
	chmod 0755 "$@"
M2 : M2-build.in
	../config.status --file=$@:$<
	chmod 0755 "$@"
clean :; rm -f M2 M2-build
