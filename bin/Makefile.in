# @configure_input@
include ../include/config.Makefile
all:: M2
ifneq "@srcdir@" "."
M2 : @srcdir@/M2 ; cp $< $@
endif
install : $(bindir)/M2
$(bindir)/M2 : @srcdir@/M2
	$(INSTALL) -d $(bindir)
	sed -e 's,^M2HOME=.*,M2HOME=$(prefix)/lib/Macaulay2-@PACKAGE_VERSION@,' $< >"$@".tmp
	mv "$@".tmp "$@"
	chmod 0755 "$@"
clean :; rm -f M2

